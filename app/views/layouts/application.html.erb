<!DOCTYPE html>
<html>
<head>
  <title>Tripcast</title>
  <%= stylesheet_link_tag "application", :media => "all" %>

  <%= yield :head %>

  <%= javascript_include_tag "vendor" %>
  <%= javascript_include_tag google_maps_js_url %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body class="<%= controller_name %>">
<div id="header">
  <div id="inner-header">
    <a href="/tripclips"><h1 id="title">Tripcast</h1></a>

    <div class="right">
      <span id="user">
        <%= controller.current_user.name %>
      </span>

      <%= link_to "Log out", "/logout", { :id => "logout", :method => :delete } %>
    </div>
  </div>
</div>

<div id="main">
  <div id="inner-main">
    <%= yield %>
  </div>
</div>

</body>
</html>
